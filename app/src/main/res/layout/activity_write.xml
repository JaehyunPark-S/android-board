<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/et_board_content"
        android:layout_width="449dp"
        android:layout_height="280dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내용을 작성하세요."
        android:inputType="textMultiLine"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/et_board_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_board_title"
        app:layout_constraintTop_toBottomOf="@+id/et_board_title" />

    <EditText
        android:id="@+id/et_board_title"
        android:layout_width="449dp"
        android:layout_height="51dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="제목"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_write2"
        android:layout_width="449dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background="#FF0707"
        android:text="글 작성"
        app:layout_constraintEnd_toEndOf="@+id/et_board_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_board_content"
        app:layout_constraintTop_toBottomOf="@+id/et_board_content" />

</androidx.constraintlayout.widget.ConstraintLayout>